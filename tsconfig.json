{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "baseUrl": ".",
    "moduleResolution": "Node", // Adjusted to 'node'
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@components/*": ["src/components/*"],
      "@apis/*": ["src/apis/*"],
      "@domains/*": ["src/domains/*"],
      "@routing/*": ["src/routing/*"],
      "@modules/*": ["src/modules/*"],
      "@Enums/*": ["src/Enums/*"],
      "@helpers/*": ["src/helpers/*"],
      "@hooks/*": ["src/hooks/*"],
      "@lib/*": ["src/lib/*"],
      "@store/*": ["src/store/*"],
      "@/*": ["src/*"]
    }
  },
  "include": [
    "src",
    "vite.config.ts",
    ".eslintrc.cjs",
    "tailwind.config.ts",
  ],
  "references": [{ "path": "./tsconfig.node.json" }]
}